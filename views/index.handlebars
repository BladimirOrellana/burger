

  <div class="container-fluid wrapper">
     <div class="row">
         <div class="boxes col-sm-12 col-md-3 col-lg-3" id="left-container">
             
                 {{#each data}}
                 {{#unless devoured}}
                 <div class="row">
                 
                 <div class="col-sm-12 burger-box">
                     
                     <div class="row">
                         <div class="col-sm-8">
   
                          {{burger_name}}
                          </div>
                           <div class="col-sm-4">
                        {{>buttons/buttons}}
                     </div>
                     </div>
                    </div>
                    </div>
                  {{/unless}}
                   {{else}}
                 <div class="container text-center">
                     <p class="empty">Empty Table</p>
                 </div>
                 {{/each}}
                 
                  </div>
         <div class="boxes col-sm-12 col-md-6 col-lg-6" id="center-container">
             <form action="/" method="POST">
             <textarea name="hanburger" id="hanburger" cols="30" rows="2" placeholder="Name your hambuger"></textarea>
             <button class="btn btn-warning btn-block">Save</button>
             
             
             </form>

         </div>
         <div class="boxes col-sm-12 col-md-3 col-lg-3" id="right-container">
           
   <div class="row">
                 {{#each data}}
                 {{#if devoured}}
                 <div class="col-sm-12 burger-box">
                     <div class="row">
                         <div class="col-sm-8">
                        {{burger_name}}
                        </div>
                    <div class="col-sm-4">
                {{>buttons/buttons}}
                </div>
            </div>
                </div>
                  {{/if}}
                 {{/each}}
                 </div>




         </div>
     </div>
  </div>
  
